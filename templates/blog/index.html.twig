{% extends 'template.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block main %}

<h2>Liste des articles</h2>

{% for subject in subjects %}
    <article class="card my-3">
        <section class="card-header bg-dark">
            <h3 class="card-title text-white">{{subject.category}}</h3>
        </section>
        <section class="card-body">
            <h5 class="card-title text-muted">{{subject.userName}}</h5>
            <p class="card-text">{{ subject.content|slice(0, 50) ~ '...' }}</p>
            <a href="#" class="btn btn-danger">En savoir +</a>
        </section>
    </article>
{% endfor %}

{% endblock %}
