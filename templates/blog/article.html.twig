{% extends 'template.html.twig' %}

{% block title %}Article{% endblock %}

{% block main %}

<h2>Voir un article {{(article.id)}} </h2>

    <article class="card my-3">
        <section class="card-header bg-dark">
            <h3 class="card-title text-white">{{article.category}}</h3>
        </section>
        <section class="card-body">
            <h5 class="card-title text-muted">{{article.userName}}</h5>
            <p class="card-text">{{article.content}}</p>
            <a href="{{ path('index') }}" class="btn btn-danger">Revenir aux articles</a>
        </section>
    </article>

{% endblock %}
